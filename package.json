{
    "name": "tourism-app",
    "private": true,
    "author": "Tom Atanasov (Xen)",
    "version": "1.0.0",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "lint:eslint": "eslint \"src/**/*.{js,ts,vue}\"",
        "lint:eslint:fix": "eslint --fix \"src/**/*.{js,ts,vue}\"",
        "lint:prettier": "prettier --check \"src/**/*.{js,json,ts,vue}\"",
        "lint:prettier:fix": "prettier --write \"src/**/*.{js,json,ts,vue}\"",
        "lint:stylelint": "stylelint \"src/**/*.{css,scss}\"",
        "lint:stylelint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
        "prepare": "husky install"
    },
    "dependencies": {
        "@mapbox/mapbox-gl-geocoder": "^5.0.1",
        "@vueuse/core": "^9.6.0",
        "axios": "^1.2.1",
        "js-md5": "^0.7.3",
        "mapbox-gl": "^1.13.2",
        "mapvue": "^0.3.1",
        "nprogress": "^0.2.0",
        "pinia": "^2.0.28",
        "vee-validate": "^4.7.3",
        "vue": "^3.2.45",
        "vue-i18n": "^9.2.2",
        "vue-router": "^4.1.6"
    },
    "devDependencies": {
        "@types/js-md5": "^0.4.3",
        "@vitejs/plugin-vue": "^4.0.0",
        "@vue/eslint-config-prettier": "^7.0.0",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-vue": "^9.8.0",
        "husky": "^8.0.2",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.1",
        "sass": "^1.56.2",
        "stylelint": "^14.16.0",
        "stylelint-config-recommended": "^9.0.0",
        "stylelint-config-standard": "^29.0.0",
        "stylelint-config-standard-scss": "^6.1.0",
        "stylelint-order": "^5.0.0",
        "vite": "^4.0.0",
        "vite-plugin-eslint": "^1.8.1",
        "vite-plugin-top-level-await": "^1.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "post-commit": "git update-index --again"
        }
    },
    "lint-staged": {
        "**/*.{js,vue}": [
            "npm run lint:eslint:fix",
            "npm run lint:prettier:fix"
        ],
        "**/*.{css,scss}": [
            "npm run lint:stylelint:fix"
        ]
    }
}
