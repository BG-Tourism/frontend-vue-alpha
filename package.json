{
  "name": "tourism-app",
  "version": "1.0.0",
  "private": true,
  "author": "Tom Atanasov (Xen)",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "npm run lint:eslint && npm run lint:stylelint",
    "lint:fix": "npm run lint:eslint:fix && npm run lint:stylelint:fix",
    "lint:eslint": "eslint \"src/**/*.{json,js,ts,vue}\"",
    "lint:eslint:fix": "eslint --fix \"src/**/*.{json,js,ts,vue}\"",
    "lint:stylelint": "stylelint \"src/**/*.{css,scss}\"",
    "lint:stylelint:fix": "stylelint \"src/**/*.{css,scss}\" --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@antfu/eslint-config": "^0.35.2",
    "@mapbox/mapbox-gl-geocoder": "^5.0.1",
    "@vueuse/core": "^9.12.0",
    "axios": "^1.3.2",
    "js-md5": "^0.7.3",
    "mapbox-gl": "^1.13.3",
    "mapvue": "^0.3.1",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.30",
    "vee-validate": "^4.7.4",
    "vue": "^3.2.47",
    "vue-gtag": "^2.0.1",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@types/js-md5": "^0.4.3",
    "@vitejs/plugin-vue": "^4.0.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.33.0",
    "eslint-plugin-vue": "^9.9.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "postcss": "^8.4.21",
    "sass": "^1.58.0",
    "stylelint": "^14.16.1",
    "stylelint-config-recommended": "^9.0.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-order": "^5.0.0",
    "vite": "^4.1.1",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-top-level-await": "^1.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "**/*.{json,js,ts,vue}": [
      "npm run lint:eslint:fix"
    ],
    "**/*.{css,scss}": [
      "npm run lint:stylelint:fix"
    ]
  }
}
